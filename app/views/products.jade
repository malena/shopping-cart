.container(ng-controller="ProductListController")
    .page-header
        h1 Books on Sale 
        p Items in your cart: {{totalQty}}
        p Total price: ${{totalPrice}}

    .well.row
        div(ng-repeat="item in list", class="col-xs-6 col-sm-3") 
            .thumbnail 
                .caption(product-directive) 
                    h3 {{item.name}}
                    p {{item.description}}
                    p ${{item.price}}
                    .input-group
                        span.input-group-addon
                            input(type="checkbox", ng-model="item.checked", ng-change="updateCart()")
                        input(type="number", min="0", ng-disabled="!item.checked", ng-model="item.qty", class="form-control", ng-change="updateCart()")

    button(ng-click="go('/review')", class="btn btn-primary") Review 
